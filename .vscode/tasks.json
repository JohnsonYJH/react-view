{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        
        {
            "taskName": "dev",
            "args": [
                "run",
                "dev"
            ]
        },
        {
            "taskName": "build",
            "args": [
                "run",
                "build"
            ]
        },
        {
            "taskName": "build-css",
            "args": [
                "run",
                "build-css"
            ]
        },
        {
            "taskName": "build&watch",
            "args": [
                "run",
                "buildwatch"
            ]
        }
    ]
}